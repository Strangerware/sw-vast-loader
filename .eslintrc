{
"extends": [
    "airbnb-base",
    "plugin:ava/recommended"
],
"plugins": [ "ava" ],
"env": {
  "browser": true,
  "node": true,
  "es6": true
},
"parser": "babel-eslint",
"parserOptions": {
  "ecmaVersion": 6,
  "sourceType": "module"
}, 
  "rules": {
    "max-len": [ "error", { "code": 200, "tabWidth": 2 } ],
    "no-console": 0,
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": [ "error", { "devDependencies": ["**/*.spec.js"]}]
  }
}